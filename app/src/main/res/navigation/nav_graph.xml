<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="com.audcode.ui.splash.SplashFragment"
            tools:layout="@layout/fragment_splash">
        <action
                android:id="@+id/action_splashFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                />


    </fragment>


    <fragment
            android:id="@+id/homeFragment"
            android:name="com.audcode.ui.home.HomeFragment"
            tools:layout="@layout/fragment_home">

        <action
                android:id="@+id/action_homeFragment_to_EpisodeDetailsFragment"
                app:destination="@id/EpisodeDetailsFragment" />
    </fragment>

    <fragment
            android:id="@+id/EpisodeDetailsFragment"
            android:name="com.audcode.ui.episode_details.EpisodeDetailsFragment"
            tools:layout="@layout/fragment_episode_details">
        <argument
                android:name="selectedEpisode"
                app:argType="com.audcode.ui.home.model.EpisodeModel"

                />

    </fragment>

</navigation>