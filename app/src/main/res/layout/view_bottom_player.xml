<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lastPlayedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/player_view_border">


    <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/rxjava"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/lastPlayedEpisodeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="audcode audcode audcode audcode audcode"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toStartOf="@+id/bottomSaveButton" />

    <ImageButton
            android:id="@+id/bottomSaveButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_turned_in_not_24px"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@+id/bottomPlayerButton"
            app:layout_constraintTop_toTopOf="@+id/bottomPlayerButton"
            app:layout_constraintBottom_toBottomOf="@+id/bottomPlayerButton"
            android:visibility="invisible"
            />


    <ImageButton
            android:id="@+id/bottomPlayerButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play_arrow_24px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

